generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model League {
  id        Int      @id @default(autoincrement())
  name      String
  country   String
  teams     Team[]
}

model Team {
  id          Int      @id @default(autoincrement())
  name        String
  leagueId    Int
  league      League   @relation(fields: [leagueId], references: [id])
  city        String
  foundation  DateTime
  players     Player[]
}

model Player {
  id         Int      @id @default(autoincrement())
  name       String
  teamId     Int
  team       Team     @relation(fields: [teamId], references: [id])
  position   String
  age        Int
  height     Float
  wieght     Float
}
